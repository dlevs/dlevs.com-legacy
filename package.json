{
	"name": "dlevs.com",
	"version": "1.0.0",
	"description": "Source code for https://dlevs.com/",
	"main": "index.js",
	"scripts": {
		"start": "node index.js",
		"start:watch": "nodemon --ignore publicSrc/ --ignore public/ index.js",
		"dev": "npm run build:styles -- --w & npm run build:scripts -- -w & npm run start:watch",
		"build": "npm run build:copypublic && npm run build:scripts && npm run build:styles && npm run build:media && npm run build:manifest && npm run build:testcoverage",
		"build:copypublic": "cp -r publicSrc/copy/* public",
		"build:scripts": "webpack --config build/processScripts.webpack.config.js",
		"build:styles": "postcss --verbose -d public/styles publicSrc/styles/*.css",
		"build:media": "node build/processMedia",
		"build:manifest": "hashlink -s --relative public 'public/**/*.+(js|css|png|ico|jpg|svg|json|webp|mp4|webm)' > data/generated/assets.json",
		"build:testcoverage": "rimraf ./public/coverage && jest --ci --coverage --coverageDirectory=./public/coverage && mv ./public/coverage/lcov-report/* ./public/coverage",
		"clean": "rimraf ./public/* && rimraf ./data/generated/*",
		"test": "jest",
		"test:browser": "jest -i --testRegex=.*browsertest.js",
		"lint": "npm run lint:scripts && npm run lint:styles && npm run lint:views",
		"lint:scripts": "eslint .",
		"lint:styles": "stylelint 'styles/**/*.css'",
		"lint:views": "pug-lint views",
		"addtravelblogimages": "node build/addTravelBlogImages.js"
	},
	"author": "Daniel Levett <dlevett@hotmail.co.uk>",
	"dependencies": {
		"@dlevs/photoswipe": "^4.1.4",
		"child-process-promise": "^2.2.1",
		"classnames": "^2.2.6",
		"feather-icons": "^4.7.3",
		"fluent-ffmpeg": "^2.1.2",
		"fs-extra": "^6.0.1",
		"glob": "^7.1.2",
		"koa": "^2.5.1",
		"koa-bodyparser": "^4.2.1",
		"koa-helmet": "^4.0.0",
		"koa-json": "^2.0.2",
		"koa-router": "^7.4.0",
		"koa-slash": "^0.2.0",
		"koa-static": "^4.0.3",
		"koa-views": "^6.1.4",
		"lazysizes": "^4.0.4",
		"lodash": "^4.17.10",
		"moment": "^2.22.2",
		"node-fetch": "^2.6.7",
		"normalize-url": "^3.0.1",
		"normalize.css": "^8.0.0",
		"pug": "^2.0.3",
		"query-string": "^6.1.0"
	},
	"devDependencies": {
		"async": "^2.6.1",
		"babel-core": "^6.26.3",
		"babel-loader": "^7.1.4",
		"babel-preset-env": "^1.7.0",
		"babel-preset-stage-3": "^6.24.1",
		"bluebird": "^3.5.1",
		"chalk": "^2.4.1",
		"cssnano": "^3.10.0",
		"eslint": "^4.19.1",
		"eslint-config-airbnb-base": "^12.1.0",
		"eslint-plugin-compat": "^2.3.0",
		"eslint-plugin-import": "^2.12.0",
		"exif-reader": "^1.0.2",
		"fetch-cookie": "^0.7.0",
		"hashlink": "0.0.1",
		"html-validator": "^3.0.5",
		"jest": "^23.3.0",
		"jest-image-snapshot": "^2.4.3",
		"nodemon": "^1.17.5",
		"postcss-cli": "^5.0.0",
		"postcss-cssnext": "^3.1.0",
		"precss": "^2.0.0",
		"progress": "^2.0.0",
		"pug-lint": "^2.5.0",
		"pug-lint-config-clock": "^2.0.0",
		"puppeteer": "^1.5.0",
		"rimraf": "^2.6.2",
		"sharp": "^0.22.1",
		"stylelint": "^9.2.1",
		"stylelint-config-standard": "^18.2.0",
		"stylelint-order": "^0.8.1",
		"svgo": "^1.0.5",
		"tough-cookie": "^2.4.2",
		"webpack": "^4.12.0",
		"webpack-cli": "^3.0.3"
	},
	"jest": {
		"testEnvironment": "node",
		"verbose": true
	}
}
